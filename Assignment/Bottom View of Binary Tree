#include <vector>
#include <map>
#include <queue>
using namespace std;

class Solution {
  public:
    vector<int> bottomView(Node *root) {
        vector<int> result;
        if (!root) return result;

        map<int, int> mp;
        queue<pair<Node*, int>> q;

        q.push({root, 0});

        while (!q.empty()) {
            auto temp = q.front();
            q.pop();

            Node* node = temp.first;
            int hd = temp.second;

            mp[hd] = node->data;

            if (node->left)
                q.push({node->left, hd - 1});

            if (node->right)
                q.push({node->right, hd + 1});
        }

        for (auto it : mp)
            result.push_back(it.second);

        return result;
    }
};
